<p>{{description}}</p>
<ul class="nav nav-pills">
  <li class="nav-item">
    {{btn("Картинка", "/cinema-objects/" ~ id ~ "?show=image", is_image ? true)}}
  </li>
  <li>
    {{btn("Описание", "/cinema-objects/" ~ id ~ "?show=info", is_info ? true)}}
  </li>
</ul>
<br>
<div class = "container">
  {% if is_image %}
    <img src="{{image}}" alt="" width = "25%">
  {% elseif is_info %}
    {{info}}
  {% endif %}
    {# <img src="{{image}}" alt="" width = "25%">
    {% block objectContext %}
