{% from "button.twig" import btn %}
<div class="flex-grow-1 col p-3">
    <div class="card position-relative">
        <div class = "position-absolute" style = "right: 55px; top: 4px">
            <form action = "/cinema-objects/{{object.id}}/edit">
                <button class = "btn btn-info">
                    <i class = "fas fa-pencil-square"></i>
                </button>
            </form>
        </div>
        <div class = "position-absolute" style = "right: 4px; top: 4px">
            <form action = "/cinema-objects/{{object.id}}/delete" method = "POST">
                {# <input type = "hidden" name = "id" value = "{{object.id}}"> #}
                <button type = "submit" class = "btn btn-danger">
                    <i class = "fas fa-times"></i>
                </button>
            </form>
        </div>
        <div><img src="{{object.image}}" class="card-img-top" alt=""></div>
        <div class="card-body">
            <h5 class="card-title">{{btn(object.title, "/cinema-objects/" ~ object.id, true)}}</h5>
            <div class="d-flex justify-content-evenly">{{ btn("Картинка", "/cinema-objects/" ~ object.id ~ "?show=image", false) }}{{ btn("Описание", "/cinema-objects/" ~ object.id ~ "?show=info", false) }}</div>
        </div>
    </div>
</div>