{% from "button.twig" import btn %}
<div class="flex-grow-1 col p-3">
    <div class="card">
        <div><img src="{{object.image}}" class="card-img-top" alt=""></div>
        <div class="card-body">
            <h5 class="card-title">{{btn(object.title, "/cinema-objects/" ~ object.id, true)}}</h5>
            <div class="d-flex justify-content-evenly">{{ btn("Картинка", "/cinema-objects/" ~ object.id ~ "/image", false) }}{{ btn("Описание", "/cinema-objects/" ~ object.id ~ "/info", false) }}</div>
        </div>
    </div>
</div> 
